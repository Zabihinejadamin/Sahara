# Raid Screen KV Layout
<RaidScreen>:
    name: 'raid'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        # Title
        Label:
            text: 'RAID PREPARATION'
            font_size: dp(24)
            size_hint_y: 0.1
            bold: True

        # Caravan Information
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.25
            spacing: dp(5)

            Label:
                id: caravan_info
                text: 'Caravan Info'
                font_size: dp(16)
                halign: 'center'

            Label:
                id: caravan_strength
                text: 'Combat Strength: 0'
                font_size: dp(14)

            Label:
                id: caravan_loot
                text: 'Potential Loot: 0'
                font_size: dp(14)

        # Squad Assembly
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            spacing: dp(10)

            Label:
                text: 'Assemble Your Squad'
                font_size: dp(18)
                bold: True

            Label:
                id: raider_count
                text: 'Raiders: 5'
                font_size: dp(16)

            Slider:
                id: raider_slider
                min: 1
                max: 20
                value: 5
                step: 1
                on_value: root.on_raider_slider_change(args[1])

        # Win Chance Display
        Label:
            id: win_chance
            text: 'Win Chance: 50%'
            font_size: dp(18)
            size_hint_y: 0.1
            bold: True
            color: 0, 1, 0, 1  # Green

        # Action Buttons
        BoxLayout:
            size_hint_y: 0.15
            spacing: dp(20)

            Button:
                text: 'EXECUTE RAID'
                font_size: dp(18)
                background_color: 1, 0.3, 0.3, 1  # Red
                on_press: root.execute_raid()

            Button:
                text: 'CANCEL'
                font_size: dp(18)
                on_press: root.return_to_map()

        # Raid Results (initially hidden)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            spacing: dp(10)
            opacity: 0

            Label:
                text: 'RAID RESULTS'
                font_size: dp(20)
                bold: True

            Label:
                id: raid_results
                text: 'Results will appear here...'
                font_size: dp(14)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

            Button:
                text: 'RETURN TO MAP'
                font_size: dp(16)
                on_press: root.return_to_map()
